<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ll_count"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_count_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="烧烤大虾"
            android:textColor="@color/tv_text_table"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_dialog_count_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="单位：把"
            android:textColor="@color/tv_text_dialog_bg"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="228dp"
            android:layout_height="68dp"
            android:layout_marginStart="58dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="21dp"
            android:background="@drawable/shape_rl_count">

            <EditText
                android:id="@+id/et_dialog_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@null"
                android:gravity="center"
                android:inputType="number|numberDecimal"
                android:maxLength="6"
                android:text="100"
                android:textColor="@color/tv_text_count"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/iv_dialog_count_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="21dp"
                android:src="@mipmap/iv_delete" />

        </RelativeLayout>


    </LinearLayout>

    <include
        layout="@layout/divider_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp">

        <Button
            android:id="@+id/tv_dialog_count_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/layout_bg_common"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/tv_text_table"
            android:textSize="24sp" />

        <include
            layout="@layout/divider_vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/tv_dialog_count_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/layout_bg_common"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/tv_text_count"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>
